<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
								xmlns:app="http://schemas.android.com/apk/res-auto"
								android:layout_width="match_parent"
								android:layout_height="match_parent">

	<RelativeLayout
			android:id="@+id/rlDetailMurid"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:background="@drawable/rectroundtrans">

		<LinearLayout
				android:id="@+id/llDetailMurid"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

			<ImageView
					android:id="@+id/ivNoMurid"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:padding="6dp"
					android:background="@drawable/ovaltrans"
					android:scaleType="fitXY"
					app:srcCompat="@drawable/muridbaru"/>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_marginLeft="5dp"
					android:orientation="vertical">

				<TextView
						android:id="@+id/tvNamaMurid"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="left|center_vertical"
						android:textSize="10sp"
						android:text="TextView"/>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="horizontal">

					<TextView
							android:id="@+id/tvTglDaftar"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="left|center_vertical"
							android:textSize="10sp"
							android:text="TextView"/>

					<TextView
							android:id="@+id/tvSeksMurid"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:gravity="right|center_vertical"
							android:textSize="10sp"
							android:text="TextView"/>
				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="horizontal">

					<TextView
							android:id="@+id/tvTglLahirMurid"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="left|center_vertical"
							android:textSize="10sp"
							android:text="TextView"/>

					<TextView
							android:id="@+id/tvKelas"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:gravity="right|center_vertical"
							android:textSize="10sp"
							android:text="TextView"/>
				</LinearLayout>

				<TextView
						android:id="@+id/tvStatusMurid"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="left|center_vertical"
						android:textSize="10sp"
						android:text="TextView"/>
			</LinearLayout>

			<ImageView
					android:id="@+id/imageView4"
					android:layout_width="20dp"
					android:layout_height="40dp"
					android:layout_gravity="center"
					android:paddingLeft="7dp"
					android:paddingTop="7dp"
					android:paddingBottom="7dp"
					app:srcCompat="@drawable/information"/>

		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
